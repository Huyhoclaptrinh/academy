<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_picking">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                </t>
            </t>
        </t>
    </template>

    <template id="report_course">
         <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="academy.report_course_document"/>
            </t>
         </t>
    </template>

    <template id="report_course_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <h1><t t-esc="doc.name"/></h1>
                <br/>
                Lesson name: <span t-field="doc.lesson_ids.name"/>
                <br/>
                Hours: <t t-esc="doc.lesson_ids.predict_amount_hours"/>
            </t>
        </t>
</template>


</odoo>
